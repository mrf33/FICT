<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/un">

    <ImageButton
        android:layout_width="160dp"
        android:layout_height="100dp"
        android:id="@+id/lectureButton"
        android:src="@drawable/lecture"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:clickable="true"
        android:contentDescription="lecturers"
        android:layout_above="@+id/textMaj"
        android:layout_alignStart="@+id/contactButton" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Lectures"
        android:id="@+id/textLect"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:layout_marginEnd="40dp"
        android:layout_below="@+id/lectureButton"
        android:layout_alignEnd="@+id/lectureButton" />
    <ImageButton
        android:layout_width="160dp"
        android:layout_height="100dp"
        android:id="@+id/calendarButton"
        android:src="@drawable/calendar"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:clickable="true"
        android:contentDescription="Calendar"
        android:layout_alignTop="@+id/aboutButton"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Calendar"
        android:id="@+id/textCale"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:layout_below="@+id/calendarButton"
        android:layout_alignStart="@+id/textMaj" />
    <ImageButton
        android:layout_width="160dp"
        android:layout_height="100dp"
        android:id="@+id/contactButton"
        android:src="@drawable/contact"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:clickable="true"
        android:contentDescription="Contact"
        android:layout_marginTop="58dp"
        android:layout_below="@+id/lectureButton"
        android:layout_alignParentEnd="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Contacts"
        android:id="@+id/textCont"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:layout_alignTop="@+id/textLoca"
        android:layout_alignStart="@+id/textAbout" />
    <ImageButton
        android:layout_width="160dp"
        android:layout_height="100dp"
        android:id="@+id/majorButton"
        android:src="@drawable/major"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:scaleType="fitXY"
        android:contentDescription="Majors"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Majors"
        android:id="@+id/textMaj"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:layout_below="@+id/majorButton"
        android:layout_alignParentStart="true"
        android:layout_marginStart="50dp" />
    <ImageButton
        android:layout_width="160dp"
        android:layout_height="100dp"
        android:id="@+id/locationButton"
        android:src="@drawable/location"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:scaleType="fitXY"
        android:contentDescription="locationr"
        android:layout_alignTop="@+id/contactButton"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Location"
        android:id="@+id/textLoca"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:layout_below="@+id/locationButton"
        android:layout_alignEnd="@+id/textMaj" />
    <ImageButton
        android:layout_width="160dp"
        android:layout_height="100dp"
        android:id="@+id/aboutButton"
        android:src="@drawable/about"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:scaleType="fitXY"
        android:contentDescription="about"
        android:layout_below="@+id/contactButton"
        android:layout_alignStart="@+id/contactButton"
        android:layout_marginTop="56dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="About"
        android:id="@+id/textAbout"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:layout_below="@+id/aboutButton"
        android:layout_alignStart="@+id/textLect" />
</RelativeLayout>
